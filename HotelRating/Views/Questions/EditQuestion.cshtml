@{
    @model Question
    <h2>Edit Question</h2>
    <form asp-action="UpdateQuestion" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <input type="hidden" name="HotelId" value="@Model.HotelId" /> <!-- اضافه کردن فیلد پنهان برای HotelId -->
        <label>Question Text:</label>
        <input type="text" name="Text" value="@Model.Text" required />
        <label>Question Type:</label>
        <select name="Type" required>

            @{
                if (Model.Type == "Text")
                {
                    <option value="Text" selected>Text</option>
                }
                else
                {
                    <option value="Text" selected>Text</option>
                }
                if (Model.Type == "MultipleChoice")
                {
                    <option value="MultipleChoice" selected>MultipleChoice</option>
                }
                else
                {
                    <option value="MultipleChoice">MultipleChoice</option>
                }
                if (Model.Type == "YesNo")
                {
                    <option value="YesNo" selected>YesNo</option>
                }
                else
                {
                    <option value="YesNo" selected>YesNo</option>
                }
            }


            @*<option value="Text" @(Model.Type= ="Text" ? "selected" : "" )>Text</option>
            <option value="MultipleChoice" @(Model.Type= ="MultipleChoice" ? "selected" : "" )>Multiple Choice</option>
            <option value="YesNo" @(Model.Type= ="YesNo" ? "selected" : "" )>Yes/No</option>*@
        </select>
        <button type="submit">Save Changes</button>
    </form>
}
